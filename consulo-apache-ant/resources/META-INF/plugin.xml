<idea-plugin version="2">
	<id>org.consulo.apache.ant</id>
	<name>Apache Ant</name>
	<depends>org.consulo.ant.core</depends>

	<extensions defaultExtensionNs="org.consulo.ant.core">
		<buildSystemProvider implementation="org.consulo.ant.JavaAntBuildSystemProvider" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<toolWindow anchor="right" icon="/icons/toolWindowAnt.png" id="Apache Ant"
					factoryClass="org.consulo.ant.toolWindow.JavaAntBuildToolWindowFactory" requireModuleExtensions="java"/>
	</extensions>
</idea-plugin>