<idea-plugin version="2">
	<id>org.consulo.thermit</id>
	<name>Thermit</name>
	<depends>org.consulo.ant.core</depends>
	<depends>org.napile.idea.lang</depends>

	<extensions defaultExtensionNs="org.consulo.ant.core">
		<buildSystemProvider implementation="org.consulo.thermit.ThermitBuildSystemProvider" />
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<toolWindow anchor="right" icon="/icons/toolWindowThermit.png" id="Thermit"
					factoryClass="org.consulo.thermit.toolWindow.ThermitBuildToolWindowFactory" requireModuleExtensions="napile"/>
	</extensions>
</idea-plugin>